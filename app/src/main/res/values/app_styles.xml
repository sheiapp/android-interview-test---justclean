<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="appTabLayoutStyle" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@color/purple_500</item>
        <item name="tabTextColor">@color/tab_selected_color</item>
        <item name="tabTextAppearance">@style/textForTabLayout</item>
        <item name="tabGravity">fill</item>
        <item name="tabMode">fixed</item>
    </style>

    <style name="textForTabLayout" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="android:textSize">18sp</item>
    </style>
</resources>